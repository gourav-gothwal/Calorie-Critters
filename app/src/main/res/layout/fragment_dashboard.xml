<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Weekly Progress Title -->
    <TextView
        android:id="@+id/tvWeeklyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weekly Progress"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Weekly Progress BarChart -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartWeekly"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/tvWeeklyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Today's Summary Title -->
    <TextView
        android:id="@+id/tvSummaryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Today's Summary"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/barChartWeekly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Today's Summary Calories/Burned/Remaining -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSummaryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <!-- Consumed -->
        <LinearLayout
            android:id="@+id/layoutConsumed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/layoutBurned"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33">

            <TextView
                android:id="@+id/tvConsumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500 kcal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumed"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Burned -->
        <LinearLayout
            android:id="@+id/layoutBurned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/layoutRemaining"
            app:layout_constraintStart_toEndOf="@id/layoutConsumed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33">

            <TextView
                android:id="@+id/tvBurned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 kcal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burned"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Remaining -->
        <LinearLayout
            android:id="@+id/layoutRemaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/layoutBurned"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33">

            <TextView
                android:id="@+id/tvRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 kcal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Macro Breakdown Title -->
    <TextView
        android:id="@+id/tvMacroTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Macro Breakdown"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/layoutSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- PieChart for Macros -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartMacros"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/tvMacroTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Goal Status -->
    <TextView
        android:id="@+id/tvGoalStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You're on track!"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pieChartMacros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
